<?xml version="1.0" encoding="utf-8"?>
<!--TODO timeline to be added-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C0CCDA">


    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_margin="15dp">

     <RelativeLayout android:layout_width="match_parent"
                     android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/date"
              android:textSize="20sp"
              android:text="2/1/2019"
              android:textColor="#000000"
              android:layout_margin="10dp"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/time"
              android:layout_alignStart="@+id/date"
              android:textSize="15sp"
              android:layout_below="@+id/date"
              android:text="11:30"

    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_alignTop="@+id/date"
              android:textSize="15sp"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="10dp"
              android:text="Time Remaining"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignTop="@id/time"
              android:text="15 mins"
              android:layout_marginEnd="15dp"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="#000000"

    />

    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/time"
                                            android:layout_marginTop="25dp"
                                            android:id="@+id/recycler_current_order"


    >

        <!--list of food items-->
    </android.support.v7.widget.RecyclerView>

     <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
     android:layout_below="@+id/recycler_current_order"
               android:id="@+id/list_current_order"
     >

     </ListView>

     </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>